{
    "manifest_version": 2,
    "name": "Error Decoder - Private",
    "version": "1.0.2",
    "description": "Decrypts right-click selected text by calling a URL. Developed for private use.",
    "permissions": [
        "contextMenus",
        "activeTab",
        "tabs",
        "storage",
        "https://*/"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "icons": {
        "16": "icon_2.png",
        "32": "icon_2.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "browser_specific_settings": {
    "gecko": {
      "id": "@error_decoder_private",
      "data_collection_permissions": {
        "required": ["websiteContent", "websiteActivity"]
      }
    }
  }
}
